<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) || t(:crowd_funding) %></title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'form' unless current_user %>
  <%= yield(:javascript) %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'shared/navbar' %>
  <div id="main">
    <%= render 'shared/notice' %>
    <div id="content">
      <%= yield %>
    </div>
  </div>
</body>
</html>
